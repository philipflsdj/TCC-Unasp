@model Tcc_Unasp.Models.Atendimento

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="m-0 font-weight-bold text-primary">Novo Atendimento</h4>
        </div>
        
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NomeAtendimento, htmlAttributes: new { @class = "control-label " })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NomeAtendimento, new { htmlAttributes = new { @class = "form-control" } })

                            @Html.ValidationMessageFor(model => model.NomeAtendimento, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-horizontal">
                        <div class="form-group">
                            <div class="row">
                                <label class="control-label col-md-2" for="inlineFormInputGroupUsername">Selecione o Cliente:</label>
                                <select class="js-example-basic-multiple form-control col-md-6" name="NomeCliente">
                                    <option value="Default">-----Selecione uma Opção-----</option>
                                    @foreach (var Cliente in ViewBag.ListaClientes)
                                    {
                                        <option value="@Cliente.NomeCliente">@Cliente.NomeCliente</option>
                                    }
                                </select>
                                <br />
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                <!-- Botão para acionar modal -->
                                <button type="button" class="btn btn-primary col-md-2" data-toggle="modal" data-target="#ModalLongoExemplo">
                                    <i class="fas fa-user-plus"></i>
                                    <span>Novo Cliente</span>
                                </button>
                            </div>
                            

                        </div>
                        @*<div class="form-group">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.LabelFor(model => model.IdCliente, "Selecione o Cliente:", htmlAttributes: new { @class = "control-label" })
                            </div>*@

                    </div>
                    
                </div>



                <div class="form-group">
                    <div class="form-group mb-2">
                        @Html.LabelFor(model => model.IdAtendente, "  Selecione o Atendente:", htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.DropDownList("IdAtendente", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdAtendente, "", new { @class = "text-danger" })
                    </div>

                </div>



                <div class="form-group">
                    @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control", rows = "5" } })
                        @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataAtendimento, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DataAtendimento, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataAtendimento, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdReuniao, "IdReuniao", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("IdReuniao", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdReuniao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Salvar" class="btn btn-outline-success" />
                    </div>
                </div>

            }

            <!-- Modal -->
            <div class="modal fade" id="ModalLongoExemplo" tabindex="-1" role="dialog" aria-labelledby="TituloModalLongoExemplo" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="TituloModalLongoExemplo">Título do modal</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            @{Html.RenderPartial("_CreateCliente", Model.Cliente);}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                            <button type="button" class="btn btn-primary">Salvar mudanças</button>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </div>
    </div>
</div>
