                    <li class="list-inline-item">
                        <h5><strong>RG:</strong> </h5>
                    </li>
                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.Cliente.RGCliente)</h5></li>
                    <li class="list-inline-item">
                        <h5><strong>CPF:</strong> </h5>
                    </li>

                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.Cliente.CPFCliente)</h5></li>
                    <br />
                    <li class="list-inline-item">
                        <h5><strong>Data de Nascimento:</strong> </h5>
                    </li>
                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.Cliente.dataNascimento)</h5></li>
