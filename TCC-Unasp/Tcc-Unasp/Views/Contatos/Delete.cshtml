                    </li>
                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.emailCliente)</h5></li>
                    <li class="list-inline-item">
                        <h5><strong>Telefone:</strong> </h5>
                    </li>
                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.TelResidCliente)</h5></li>
                    <li class="list-inline-item">
                        <h5><strong>Celular:</strong> </h5>
                    </li>
                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.CelCliente)</h5></li>
                    <li class="list-inline-item">
                        <h5><strong>Data de Nascimento:</strong> </h5>
                    </li>
                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.Cliente.dataNascimento)</h5></li>
                    <li class="list-inline-item">
                        <h5><strong>Data de Nascimento:</strong> </h5>
                    </li>
                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.Cliente.dataNascimento)</h5></li>
                    <li class="list-inline-item">
                        <h5><strong>Data de Nascimento:</strong> </h5>
                    </li>
                    <li class="list-inline-item"> <h5>@Html.DisplayFor(model => model.Cliente.dataNascimento)</h5></li>


                </ul>


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Excluir" id="btnCreate" class="btn btn-outline-danger" />
                        <a class="btn btn-outline-danger" href="@Url.Action("Index", "Clientes")">Voltar para a lista</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

