@model IEnumerable<Tcc_Unasp.Models.ImovelTerceiro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<script>
$(document).ready(function(){
    $('.money2').mask('000.000.000.000.000,00', {reverse: true});
});
</script>
