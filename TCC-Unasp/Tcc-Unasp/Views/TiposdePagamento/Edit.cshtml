@model Tcc_Unasp.Models.TipoPagamento

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}
<div class="col-lg-12">
    <div class="card mb-4">
        <div class="card-header">
            <h2><strong>Edição de Tipos Pagamento</strong></h2>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.IdTipoPagamento)

                    <div class="form-group">
                        <h4 class="control-label col-md-2">Descrição</h4>                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                            <a class="btn btn-danger" href="@Url.Action("Index", "TiposdePagamento")">Voltar para a lista</a>
                        </div>
                    </div>
                </div>
            }

 
        </div>
    </div>
</div>


