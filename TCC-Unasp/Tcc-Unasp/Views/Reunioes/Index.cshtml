@model IEnumerable<Tcc_Unasp.Models.Reuniao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<!-- Index -->
<div class="col-lg-12">
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="m-0 font-weight-bold text-primary">Reuniões</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered " id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Nome da Reunião</th>
                            <th>1° Cliente</th>
                            <th>2° Cliente</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Data</th>
                            <th>Nome da Reunião</th>
                            <th>1° Cliente</th>
                            <th>2° Cliente</th>
                            <th>Ações</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataReuniao)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeReuniao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cliente.NomeCliente)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Cliente1.NomeCliente)
                                </td>
                                <td>

                                    <a class="btn btn-primary" href="@Url.Action("Edit","Reunioes", new { id = item.IdReuniao })"><i class="fas fa-pencil-alt" style="color:white"></i></a> |
                                    <a class="btn btn-warning" href="@Url.Action("Details","Reunioes", new { id = item.IdReuniao })"><i class="fas fa-list-alt" style="color:white"></i></a> |
                                    <a class="btn btn-danger" href="@Url.Action("Delete","Reunioes", new { id = item.IdReuniao })"><i class="fas fa-trash-alt" style="color:white"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>






